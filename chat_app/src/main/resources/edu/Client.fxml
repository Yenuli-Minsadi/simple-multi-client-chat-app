<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="500.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ClientController">
    <children>
        <Pane layoutX="30.0" layoutY="30.0" prefHeight="440.0" prefWidth="490.0" style="-fx-background-color: blue; -fx-background-radius: 30px;">
            <children>
                <TextField fx:id="txtMessage" layoutX="92.0" layoutY="340.0" prefHeight="35.0" prefWidth="303.0" style="-fx-background-radius: 30px;" />
                <Button fx:id="btnEnter" layoutX="410.0" layoutY="340.0" mnemonicParsing="false" onAction="#btnEnterOnAction" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 50px; -fx-background-color: yellow;" text="&gt;" />
                <TabPane layoutX="45.0" layoutY="38.0" prefHeight="269.0" prefWidth="400.0" style="-fx-background-color: white; -fx-background-radius: 30px;" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab fx:id="tabClientName" text="Client">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="264.0" prefWidth="400.0">
                           <children>
                              <TextArea fx:id="txtClientTxtArea" layoutX="5.0" layoutY="8.0" prefHeight="219.0" prefWidth="389.0" style="-fx-border-color: white;" />
                              <VBox fx:id="imageContainer" spacing="5" prefHeight="30" prefWidth="30" />
                           </children></AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <Button fx:id="btnAddFiles" layoutX="45.0" layoutY="340.0" mnemonicParsing="false" onAction="#btnAddFilesOnAction" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 50px; -fx-background-color: #F7374F;" text="+" textFill="WHITE" />
            </children>
            <effect>
                <DropShadow height="18.07" radius="8.535" width="18.07" />
            </effect>
        </Pane>
    </children>
</AnchorPane>
